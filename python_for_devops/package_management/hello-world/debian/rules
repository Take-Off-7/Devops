#!/usr/bin/make -f
# Minimal debian/rules for Python packages

%:
	dh $@ --with python3 --skip-tests

override_dh_auto_build:
	python3 setup.py build

override_dh_auto_install:
	python3 setup.py install \
		--root=$(CURDIR)/debian/hello-world-takeoff7 \
		--optimize=1 \
		--install-scripts=$(CURDIR)/debian/hello-world-takeoff7/usr/bin

override_dh_auto_clean:
	python3 setup.py clean --all
